<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:danmu = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.orzangleli.danmu.MainActivity"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        >
        </android.support.v7.widget.Toolbar>

    <com.orzangleli.danmu.DanmuView
        android:id="@+id/danmuView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        danmu:orientation="horizontal"
        danmu:antidirection="false"


        />
    <LinearLayout
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <EditText
            android:id="@+id/message"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/send"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="发送"
            />

    </LinearLayout>
</LinearLayout>
